[
  {
    // Kerää tutkimuksen perustiedot käyttäjältä
    "command": "INPUT",  // Pyytää käyttäjältä syötettä
    "event": "research_focus", // Tapahtuman tunniste
    "anchor": "research_focus_details", // Mihin muistiin tallennetaan
    "state":"init", // Aloitustila
    "text": "Please describe the primary focus of your research, including the goal and key findings."
  },
  {
    // Kerää tiedot tutkimuksen merkityksestä
    "command": "INPUT",
    "event": "significance",
    "anchor": "significance_details",
    "state":"init",
    "text": "Explain the significance of your research findings. Why are they important, and what practical applications do they have?"
  },
  {
    // Kerää tiedot tutkimuksen ajankohtaisuudesta
    "command": "INPUT",
    "event": "relevance",
    "state":"init",
    "anchor": "relevance_details",
    "text": "Describe how the findings are relevant at this moment. Are they addressing any current issues or trends?"
  },
  {
    // Ilmoitus käyttäjälle analyysin aloittamisesta
    "command": "TEXT",
    "state":"init",
    "text": "Thank you for providing the details. We will now analyze whether your research meets the criteria for a media release."
  },
  {
    // LLM analysoi kerätyt tiedot mediatiedotteen soveltuvuuden arvioimiseksi
    "command": "LLM-QUERY",
    "state":"init",
    "prompt": "Based on the following details:\n- Research Focus: {research_focus_details}\n- Significance: {significance_details}\n- Relevance: {relevance_details}\n\nDetermine if the research qualifies for a media release by evaluating the following criteria:\n1. Is it of interest to the general public or a specific audience?\n2. Is the University the first to introduce this topic?\n3. Does it have international relevance?\n4. Is it timely and impactful?\n\nIf it does not qualify, suggest the most appropriate alternative dissemination strategy.",
    "text": "Analyze Media Release Suitability",
    "anchor": "media_release_analysis", // Analyysin tulos tallennetaan tähän
    "scope": "research_focus_details significance_details relevance_details", // Käytettävät muistit
    "setstate": "analysis_state" // Siirrytään analyysitilaan
  },
  {
    // Ilmoitus analyysin valmistumisesta
    "command": "TEXT",
    "scope": "media_release_analysis",
    "state":"analysis_state",
    "text": "The analysis has been completed. Based on your input, the system has determined the suitability of a media release or suggested alternative strategies."
  },
  {
    // Päätöksenteko analyysin perusteella
    "command": "CONDITION", // Haarautumispiste
    "prompt": "Does the analysis indicate that a media release is suitable based on the criteria?",
    "scope": "media_release_analysis",
    "anchor": "release_decision",
    "state": "analysis_state",
    "setstate": "decision_state", // Jos soveltuu -> decision_state
    "setstate-failure": "alternative_state" // Jos ei sovellu -> alternative_state
  },
  {
    // Ilmoitus mediatiedotteen soveltuvuudesta
    "command": "TEXT",
    "text": "Your research qualifies for a media release. Let's proceed with drafting it.",
    "state": "decision_state"
  },
  {
    // LLM luo mediatiedotteen luonnoksen
    "command": "LLM-QUERY",
    "prompt": "Draft a media release for the following research details:\n- Research Focus: {research_focus_details}\n- Significance: {significance_details}\n- Relevance: {relevance_details}\n\nEnsure the draft is clear, engaging, and understandable to non-academic audiences. Include a compelling headline and summary.",
    "text": "Generate Media Release Draft",
    "anchor": "media_release_draft", // Luonnos tallennetaan tähän
    "scope": "research_focus_details significance_details relevance_details",
    "state": "decision_state",
    "setstate": "draft_state"
  },
  {
    // Näyttää luonnoksen käyttäjälle
    "command": "TEXT",
    "state":"draft_state",
    "scope": "media_release_draft",
    "text": "Here is your draft media release. Review it carefully to ensure it conveys the key message effectively."
  },
  {
    // LLM antaa palautetta luonnoksesta
    "command": "LLM-QUERY",
    "prompt": "Provide detailed feedback on the following media release draft:\n{media_release_draft}\n\nFocus on clarity, relevance, audience engagement, and any improvements needed.",
    "text": "Get Feedback on Media Release Draft",
    "anchor": "media_release_feedback",
    "scope": "media_release_draft",
    "state": "draft_state",
    "setstate": "final_state"
  },
  {
    // Näyttää palautteen käyttäjälle
    "command": "TEXT",
    "state":"final_state",
    "scope": "media_release_feedback",
    "text": "Review the feedback provided to refine your media release further."
  },
  {
    // Ilmoitus jos mediatiedote ei sovellu
    "command": "TEXT",
    "text": "Based on the analysis, a media release is not suitable. The decision is based on the following: ",
    "scope":"release_decision",
    "state": "alternative_state"
  },
  {
    // LLM ehdottaa vaihtoehtoisia viestintäkanavia
    "command": "LLM-QUERY",
    "prompt": "Suggest the most appropriate alternative dissemination strategy for the following research details:\n- Research Focus: {research_focus_details}\n- Significance: {significance_details}\n- Relevance: {relevance_details}\n\nOptions include:\n1. Direct media tips\n2. University website news\n3. Faculty or research group websites\n4. Flamma news articles\n5. Social media posts\n6. Yliopisto magazine articles. Output helpful text for humans.",
    "text": "Suggest Alternative Dissemination Strategies",
    "anchor": "alternative_strategies",
    "scope": "research_focus_details significance_details relevance_details",
    "state": "alternative_state",
    "setstate": "final_state"
  },
  {
    // Näyttää vaihtoehtoiset strategiat
    "command": "TEXT",
    "state": "final_state",
    "scope": "alternative_strategies",
    "text": "Here are the recommended alternative dissemination strategies for your research."
  },
  {
    // Mahdollisuus aloittaa alusta
    "command": "LLM-QUERY",
    "state":"final_state",
    "prompt":"",
    "text": "Start again",
    "anchor": "",
    "scope": "",
    "setstate": "init"
  }
]
